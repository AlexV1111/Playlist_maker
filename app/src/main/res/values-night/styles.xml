<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_main_style">
        <item name="android:background">@color/black</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="title_activity_main_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="activity_setting_style">
        <item name="android:background">@color/black</item>
    </style>

    <style name="titleStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_24</item>
    </style>

    <style name="titleButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonStyle_activity_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="cornerRadius">@dimen/cornerRadius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">1dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonStyle_activity_settings" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="track_description_style">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/trackSize_11</item>
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="track_item_style">
        <item name="android:paddingHorizontal">@dimen/horizontalMargin</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="search_bar_style">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="placeHolderStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">@dimen/textSize_19</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>